{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    // Applies a CORS header for all font files
  "headers": [ {
    "source": "private/*.@(md|mdx|js)",
    "headers": [ {
      "key": "Access-Control-Allow-Credentials",
      "value": "*"
    } ]
  } ]
  },
  "emulators": {
    "hosting": {
      "port": 3000,
      "host": "0.0.0.0"
    }
  }
}
